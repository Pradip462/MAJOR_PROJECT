<%- layout("/layouts/boilerplate")%>
<style>
    #filters {
        display: flex;
        align-items: center;
        padding: 1rem;
        overflow: hidden;
        position: relative;
        width: 100%;
        max-width: 100%;
    }

    .filter-container {
        display: flex;
        transition: transform 0.5s ease;
        min-width: 100%;
    }

    .filter {
        text-align: center;
        margin-right: 1rem;
        opacity: 0.7;
        flex: 0 0 auto;
    }

    .filter:hover {
        opacity: 1;
        cursor: pointer;
    }

    .filter p {
        font-size: 1rem;
    }

    .tax-tog {
        border: 1px solid black;
        border-radius: 1rem;
        height: 3.25rem;
        padding: 1rem;
        display: flex;
        align-items: center;
        position: fixed;
        bottom: 20px;
        right: 20px;
        background-color: white;
        z-index: 999;
    }

    .arrow {
        background-color: white;
        border: 1px solid black;
        border-radius: 1px;
        padding: 0.5rem;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        z-index: 10;
    }
    .arrow-left {
        left: 10px;
    }

    .arrow-right {
        right: 10px;
    }

    #filters:hover .arrow {
    display: flex;
    }
    @media (max-width: 768px) {
        .arrow {
            display: none;
        }

        .tax-tog {
            bottom: 10px;
            right: 10px;
        }

        #filters {
            margin-bottom: 2rem;
            flex-wrap: wrap;
        }

        .filter-container {
            flex-direction: row;
            justify-content: center;
        }

        .filter {
            margin: 0.3rem;
            flex: 0 1 auto;
            opacity: 1;
            width: calc(33.33% - 0.6rem);
        }

        .filter p {
            font-size: 0.9rem;
        }
        #filters:hover .arrow {
        display: none;
    }
    }

</style>

